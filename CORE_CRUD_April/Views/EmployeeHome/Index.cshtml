@model IEnumerable<CORE_CRUD_April.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee List</h1>

<table>
    <tr>
        <th>Employee ID</th>
        <th>Name of Employee</th>
        <th>Salary</th>
        <th></th>
    </tr>
    @foreach (Employee item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.name</td>
            <td>@item.Salary</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })|@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
        </tr>
    }
</table>

